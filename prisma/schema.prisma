// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// prisma/schema.prisma
model Image {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  url       String
  Product   Product? @relation(fields: [productId], references: [id])
  productId String?  @db.ObjectId
}

model Faq {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  question_1_en String?
  question_1_ua String?
  question_2_en String?
  question_2_ua String?
  question_3_en String?
  question_3_ua String?
  question_4_en String?
  question_4_ua String?
  Product       Product? @relation(fields: [productId], references: [id])
  productId     String?  @db.ObjectId
}

model User {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String?
  lastName        String?
  email           String   @unique
  password        String?
  phoneNumber     String?
  city            String?
  streetName      String?
  houseNumber     Int?
  additionNumber  String?
  zipCode         String?
  logisticCompany String?
  department      String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  orders          Order?   @relation(fields: [orderId], references: [id])
  orderId         String?  @db.ObjectId
}

model Order {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  date           DateTime
  product        Product[]
  typeOfDelivery String
  count          Int
  User           User[]
  sum            Float
  createdAt      DateTime
  updatedAt      DateTime
}

model Product {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  article        Int
  linkName       String
  name_en        String
  name_ua        String
  UTP_en         String
  UTP_ua         String
  description_en String
  description_ua String
  useTo_en       String
  useTo_ua       String
  image          Image[]
  volume_en      String[]
  volume_ua      String[]
  benefits_en    String[]
  benefits_ua    String[]
  ingredients_en String
  ingredients_ua String
  shelfLife_en   String
  shelfLife_ua   String
  faq            Faq[]
  category       String
  price          Float
  amount         Int
  stock          Boolean
  current_rating Float
  tradeMarkImage String
  Order          Order?   @relation(fields: [orderId], references: [id])
  orderId        String?  @db.ObjectId
}
