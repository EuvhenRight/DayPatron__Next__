// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// prisma/schema.prisma
model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @map("user_id") @db.ObjectId
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id") @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  name              String?
  firstName         String?
  lastName          String?
  phone             String?
  email             String    @unique
  emailVerified     DateTime?
  image             String?
  password          String?
  passwordExpiresAt DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  role              Role      @default(USER)

  cart     Cart[]
  order    Order[]
  address  Delivery[]
  accounts Account[]
  sessions Session[]
  reviews  ReviewItem[]

  @@map("users")
}

model VerificationRequest {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([identifier, token])
  @@map("verificationRequests")
}

enum Role {
  USER
  ADMIN
}

enum Payment {
  POSTPAID
  PAIMENTBYCARD
}

type ExtraUser {
  firstName String
  lastName  String
  email     String
  phone     String
}

enum StatusOrder {
  PENDING
  ACCEPTED
  CANCEL
  DELETED
}

//Cart, CartItem
model CartItem {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  quantity  Int
  variantId String @db.ObjectId
  cartId    String @db.ObjectId

  cart    Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade)
  variant Variant @relation(fields: [variantId], references: [id], onDelete: Cascade)

  @@map("cartItems")
}

model Cart {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  itemsTotal    Float
  subTotal      Float
  discountTotal Float
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  userId String? @db.ObjectId

  user User? @relation(fields: [userId], references: [id])

  items CartItem[]

  @@map("carts")
}

//Delivery
model Delivery {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String?  @db.ObjectId

  user User? @relation(fields: [userId], references: [id])

  items DeliveryItem[]

  @@map("deliveries")
}

model DeliveryItem {
  id              String  @id @default(auto()) @map("_id") @db.ObjectId
  typeOfDelivery  String
  branchNumber    String?
  city            String?
  street          String?
  houseNumber     Int?
  additionNumber  String?
  apartmentNumber Int?
  zipCode         String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  deliveryId String? @db.ObjectId
  orderId    String? @db.ObjectId

  order    Order[]
  delivery Delivery? @relation(fields: [deliveryId], references: [id], onDelete: Cascade)

  @@map("deliveryItems")
}

model OrderItem {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  quantity  Int
  variantId String @db.ObjectId
  orderId   String @db.ObjectId

  variant Variant @relation(fields: [variantId], references: [id])
  order   Order   @relation(fields: [orderId], references: [id])

  @@map("orderItems")
}

model Order {
  id             String     @id @default(auto()) @map("_id") @db.ObjectId
  itemsTotal     Float
  subTotal       Float
  bonus          String?
  payment        Payment
  comment        String?
  extra_user     ExtraUser?
  userId         String     @db.ObjectId
  cartId         String     @db.ObjectId
  deliveryItemId String?    @db.ObjectId

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  item    OrderItem[]
  status  OrderEvent?
  address DeliveryItem? @relation(fields: [deliveryItemId], references: [id])

  @@map("orders")
}

model OrderEvent {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  status    StatusOrder @default(PENDING)

  Order   Order  @relation(fields: [orderId], references: [id])
  orderId String @unique @db.ObjectId

  @@map("order_events")
}

// Product, Image
type Image {
  url String
}

model Variant {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  image          String
  volume         String
  article        String
  discount_price Float   @default(0)
  original_price Float
  stock          Boolean

  productId String  @db.ObjectId
  product   Product @relation(fields: [productId], references: [id])

  cartItem  CartItem[]
  orderItem OrderItem[]

  @@map("variants")
}

model Product {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  category       String
  NEW            Boolean
  HIT            Boolean
  ingredients    String
  specification  String
  shelfLife      String
  name           String
  UTP            String
  description    String
  useTo          String
  current_rating Float
  volume         String[]
  exlusive_size  String[]

  image     Image[]
  variant   Variant[]
  reviews   Reviews   @relation(fields: [reviewsId], references: [id])
  reviewsId String    @db.ObjectId

  @@map("products")
}

model Reviews {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  messageTotal Int    @default(0)
  pageTotal    Int    @default(1)
  ratingTotal  Float  @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  messages ReviewItem[]
  product  Product[]

  @@map("reviews")
}

model ReviewItem {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  rating    Int
  verified  Boolean
  reviewsId String  @db.ObjectId
  fullName  String
  email     String
  message   String
  userId    String? @db.ObjectId

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  reviews Reviews @relation(fields: [reviewsId], references: [id])
  User    User?   @relation(fields: [userId], references: [id])

  @@map("reviewsItem")
}
